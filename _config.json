{
  "sleepTime": 3,
  "waitForPosition": true,
  "cleanshutdEnable": false,
  "cleanshutdPipe": "/tmp/cleanshutd",

  "Database": {
    "host": "localhost",
    "database": "pwnpi",
    "user": "postgres",
    "password": "postgres",
    "root": false
  },

  "GPS": {
    "enable": true,
    "sleepTime": 1,
    "reCounterMax": 5,
    "root": false
  },

  "modules": {
    "UI": {
      "enable": false,
      "width": 720,
      "height": 480,
      "fps": 60,
      "root": false
    },
    "WiFi": {
      "autoInterface": false,
      "interface": "wlan0mon",
      "promiscuous": true,
      "enable": true,
      "reCounterMax": 5,
      "packetsPerChannel": 10,
      "timeoutPerChannel": 3,
      "channels": [1],
      "root": true
    },
    "HCX": {
      "interface": "wlan1mon",
      "enable": true,
      "output": "hcxdumps/",
      "root": true
    },
    "Bluetooth": {
      "interface": "hci0",
      "onlyLE": false,
      "onlyClassic": false,
      "enable": true,
      "classicScanTime": 4,
      "leScanTime": 2,
      "reCounterMax": 5,
      "root": true
    },
    "Server": {
      "enable": true,
      "host": "0.0.0.0",
      "port": 1337,
      "threaded": true,
      "defaultPosition": [49.460983, 11.061859],
      "root": false
    }
  }
}
