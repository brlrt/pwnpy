{
  "sleepTime": 3,
  "waitForPosition": false,
  "cleanshutdEnable": false,
  "cleanshutdPipe": "/tmp/cleanshutd",

  "Database": {
    "schema": "sqlite:///pwnpy.db"
  },

  "Log": {
    "path": "log/"
  },

  "modules": {
    "GPS": {
      "enable": false,
      "sleepTime": 1,
      "root": false
    },
    "WiFi": {
      "enable": false,
      "autoInterface": false,
      "interface": "wlan0mon",
      "promiscuous": true,
      "packetsPerChannel": 10,
      "timeoutPerChannel": 3,
      "channels": [1],
      "root": true
    },
    "HCX": {
      "enable": false,
      "interface": "wlan1mon",
      "output": "hcxdumps/",
      "root": true
    },
    "Bluetooth": {
      "enable": true,
      "interface": "hci0",

      "scanClassic": true,
      "scanLE": true,
      "scanBeacon": true,

      "classicScanTime": 4,
      "leScanTime": 2,

      "leReadAll": true,
      "root": true
    },
    "Server": {
      "enable": true,
      "templates": "modules/server-data/templates/",
      "static": "modules/server-data/static/",
      "host": "0.0.0.0",
      "port": 1337,
      "threaded": true,
      "defaultPosition": [49.460983, 11.061859],
      "root": false
    },
    "UI": {
      "enable": false
    }
  }
}
